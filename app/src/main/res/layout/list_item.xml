<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:id="@+id/itemAreaId">

    <ImageView
        android:id="@+id/tvImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/jamillabltd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E91E63"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp"
            android:text="Job News"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ActionAid Job Circular"
            android:layout_below="@+id/tvType"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTitle"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="ActionAid Bangladesh Job Circular 2023 has been published on the https://jobs.actionaidbd.org website. Itâ€™s a great opportunity for those who want to build a bright future through the NGO job in Bangladesh. ActionAid Job Circular 2023 is one of the best NGO Job Circular in Bangladesh. From the point of view, of ActionAid Bangladesh Job Circular 2023 is an excellent NGO job chance for NGO job candidates in Bangladesh. If you want to apply for a job, then you should read the full article of ActionAid Bangladesh Job Circular 2023."
            />



    </RelativeLayout>

</LinearLayout>